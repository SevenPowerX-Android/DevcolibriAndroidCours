<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.com.sevenpowerx.android.devcalibry.activityresultexam.activity.MainActivity">

    <TextView
        android:id="@+id/textHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="52dp"
        android:text="Привет!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLanguageMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:text="Ваш язык:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHello"
        android:layout_marginLeft="64dp" />

    <TextView
        android:id="@+id/textEditLanguageMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Неизвестно."
        app:layout_constraintStart_toEndOf="@+id/textLanguageMain"
        app:layout_constraintTop_toBottomOf="@+id/textNameMain"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textNameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="Как вас зовут?"
        app:layout_constraintStart_toEndOf="@+id/textHello"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttPresented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onShow"
        android:text="Представится."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLanguageMain"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onShow"
        android:text="Выбрать язык."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditLanguageMain"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
